{
  "name": "0xalice-tgram-bot",
  "version": "0.2.6",
  "description": "Batched Telegram notification bot for 0xAlice",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "node build.mjs",
    "watch": "node build.mjs --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.ts'",
    "prepare": "yarn build",
    "ci": "yarn install --frozen-lockfile && yarn build"
  },
  "files": [
    "dist",
    "dist/**/*",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/21e8/telegram-batch-bot.git"
  },
  "keywords": [
    "telegram",
    "bot",
    "notifications",
    "vbase"
  ],
  "author": "VBase",
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^3.3.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^18.15.11",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "esbuild": "^0.24.0",
    "esbuild-node-externals": "^1.15.0",
    "eslint": "^8.37.0",
    "jest": "^29.7.0",
    "prettier": "^2.8.7",
    "sinon": "^19.0.2",
    "ts-jest": "^29.2.5"
  }
}
