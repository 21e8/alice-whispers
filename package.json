{
  "name": "0xalice-tgram-bot",
  "version": "0.1.8",
  "description": "Batched Telegram notification bot for 0xAlice",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.ts'",
    "prepare": "yarn build",
    "ci": "yarn install --frozen-lockfile && yarn build"
  },
  "files": [
    "dist",
    "dist/**/*",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/21e8/telegram-batch-bot.git"
  },
  "keywords": [
    "telegram",
    "bot",
    "notifications",
    "vbase"
  ],
  "author": "VBase",
  "license": "MIT",
  "dependencies": {
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "sinon": "^19.0.2",
    "ts-jest": "^29.1.0"
  }
}
